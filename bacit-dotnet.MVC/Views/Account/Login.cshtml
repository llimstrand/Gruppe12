@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using bacit_dotnet.MVC.Entities
@using bacit_dotnet.MVC.Models.Account
@model LoginViewModel
@inject SignInManager<IdentityUser> SignInManager

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

@{
    ViewData["Title"] = "Logg inn";
}
<img src = "https://lh4.googleusercontent.com/opmUcBFmnDaFXxt6k2_sQ1Z2OR6gtO1tzyyM504jN5g0tVRBjZkglVsTWlQ4ePeDS8M=w2400"> 
<div class= box>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                 
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" placeholder="Passord"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="Knapp"><a href="/admin/AdmAllSug" class="admlogginn">Logg inn</a></button>
                        <br><br><br><br><br><br>
                    </div>
                </div>
                <p>
                    <a asp-action="Register" class ="registrerNyBruker" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrer ny bruker</a> <br>
                </p>
            </form>
   
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}