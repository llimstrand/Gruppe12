<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bacit_dotnet.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bacit_dotnet.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
       <style>
                #knapp {
                    background-color: white;
                    border-radius: 5px;
                    border: 2px solid #adadad;
                    position: absolute;
                    top: 44%;
                    left: 86%;
                    width: 140px;
                    height: 57px;
                }
                .admtil {
                    top:8%;
                    left:86%;
                    position: absolute; 
                    color: #7b7b7b;                    
                 }

                #knapp:hover{
                    border-color: black;
                }

              .border-top {
                    border-top: 1px solid #e5e5e5;
                    }
              .border-bottom {
                    border-bottom: 1px solid #e5e5e5;
                    padding: 3%;
                    

                    }
               .box-shadow {
                    box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);

               }
                #meny {
                    width: 100%;
                    font-size: large;                   
                }

                 #meny:hover {
                    border-color: #ECF2EC;
                    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
                    border-radius: 5%;
                    width: 100%;
                }

                #nordic {
                    margin-left: 44%; /* css til Nordicdoor */
                    position: absolute;
                    font-size: medium;
                    bottom: 70%;
                }
        </style>
        
        <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="meny" class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdmViewSug">Alle Forslag</a>
                        </li>
                        <li class="nav-item">
                            <a id="meny" class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="ViewTeam">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a id="meny" class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="ViewEmp">Ansatte</a>
                        </li>
                        <a id="nordic" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NordicDoor</a> 
                <button  class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                        </li> 
                        <li  class="nav-item">
                            <button id="knapp"><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdmProfile">Min Profil</a></button>
                        </li>
                        <li>
                            <p class="admtil">Administratortilgang</p>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NordicDoor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>