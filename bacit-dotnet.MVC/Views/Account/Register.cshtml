@using bacit_dotnet.MVC.Models.Account
@model RegisterViewModel

<style>

body {
  background-image: url("https://iili.io/D4zAa2.jpg");
  font-family: Arial, Helvetica, sans-serif;
   background-size: cover;
 
}
 
.box{
   background-color: rgba(255, 255, 255, 0.7);
   width:30%;
   height: 65%;
   text-align: center;
   margin: auto;
   margin-top: 12%;
   border-radius: 10px;
   padding: 1px;
   }

 h1 {
  font-weight: lighter;
  letter-spacing: 0.8px;
   }
 
 
img {
   margin-top: 100px;
   margin-bottom: -10%;
   width: 30%;
   margin-left: 35%;
   margin-right: 35%;
    }
 
.knapp {
   border-radius: 5px;
   padding: 17px;
   border: 1px solid #939393;
   text-decoration: none;
   color: #525252;
}

 
input,textarea{
  border-top: none;
   border-left: none;
   border-right: none;
   border-bottom: 1px solid #525252;
   background-color: rgba(0, 0, 0, 0);
   height: 40px;
   width: 300px;
   margin: 20px;
   font-size: 17px;
   }
 
h1{
  margin-top: 10%;
  
   }
 
 .Registrerknapp {
    border-radius: 5px;
    padding: 17px;
    border: 1px solid #939393;
    text-decoration: none;
    color: #525252;
    margin-left: 200px;
    font-size: 17px;
    background-color: rgba(0, 0, 0, 0);
}
 

    
</style>

@{
    ViewData["Title"] = "Register";
}
<img src = "https://lh4.googleusercontent.com/opmUcBFmnDaFXxt6k2_sQ1Z2OR6gtO1tzyyM504jN5g0tVRBjZkglVsTWlQ4ePeDS8M=w2400"> 
<div class= box>
<h1>@ViewData["Title"]</h1>

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
  
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
     
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" placeholder="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
       
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" placeholder="Passord"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
       
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Bekreft passord"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="Registrerknapp">Register</button>
        </div>
    </div>
 
</form>
   </div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}